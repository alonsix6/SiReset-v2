# .env.example - Copiar a .env y completar valores

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Security
SECRET_KEY=generate-with-openssl-rand-hex-32
PBKDF2_ITERATIONS=600000

# Environment
ENVIRONMENT=production

# CORS - agregar dominios del frontend
CORS_ORIGINS=["https://sireset.app","https://www.sireset.app"]

# Supabase (opcional - para storage)
SUPABASE_URL=https://[PROJECT-REF].supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Google Cloud Storage (opcional)
GCS_BUCKET_NAME=sireset-files
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# Upload limits
MAX_UPLOAD_SIZE_MB=500
